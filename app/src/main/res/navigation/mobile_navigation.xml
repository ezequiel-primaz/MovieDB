<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_popular">

    <fragment
        android:id="@+id/navigation_popular"
        android:name="com.example.myapplication.ui.Popular.PopularFragment"
        android:label="@string/title_popular"
        tools:layout="@layout/fragment_movies_list" />

    <fragment
        android:id="@+id/navigation_top_rated"
        android:name="com.example.myapplication.ui.TopRated.TopRatedFragment"
        android:label="@string/title_top_rated"
        tools:layout="@layout/fragment_movies_list" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.myapplication.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
</navigation>